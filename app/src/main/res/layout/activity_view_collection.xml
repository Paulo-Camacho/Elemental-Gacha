<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewCollectionActivity">


    <TextView
        android:id="@+id/collectionTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/collectionItemsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="Items:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/collectionTitleTextView" />


    <ImageView
        android:id="@+id/temporaryCollectionImageView1"
        android:layout_width="69dp"
        android:layout_height="66dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:contentDescription="Silly Little Star"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/collectionItemsTextView"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <ImageView
        android:id="@+id/temporaryCollectionImageView2"
        android:layout_width="69dp"
        android:layout_height="66dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:contentDescription="Silly Little Star"
        app:layout_constraintTop_toBottomOf="@id/collectionItemsTextView"
        app:layout_constraintStart_toEndOf="@id/temporaryCollectionImageView1"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <ImageView
        android:id="@+id/temporaryCollectionImageView3"
        android:layout_width="69dp"
        android:layout_height="66dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:contentDescription="Silly Little Star"
        app:layout_constraintTop_toBottomOf="@id/collectionItemsTextView"
        app:layout_constraintStart_toEndOf="@id/temporaryCollectionImageView2"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <Button
        android:id="@+id/collectionBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:width="150dp"
        android:height="75dp"
        android:text="@string/back"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/Raspberry"/>

</androidx.constraintlayout.widget.ConstraintLayout>