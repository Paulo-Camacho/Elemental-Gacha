<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PremiumUserLandingPageActivity">


    <TextView
        android:id="@+id/premiumUserTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Premium User"
        android:textSize="48sp"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/premiumUserRollButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="Roll"
        app:layout_constraintTop_toBottomOf="@+id/premiumUserTitleTextView"
        app:layout_constraintBottom_toTopOf="@+id/premiumUserViewCollectionButton"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/premiumUserViewCollectionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="24sp"
        android:text="View Collections"
        app:layout_constraintBottom_toTopOf="@+id/premiumUserLogoutButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/premiumUserLogoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/premiumUserViewCollectionButton" />


</androidx.constraintlayout.widget.ConstraintLayout>