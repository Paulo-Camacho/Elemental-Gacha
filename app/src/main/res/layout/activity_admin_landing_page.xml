<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminLandingPageActivity">

    <TextView
        android:id="@+id/AdminNameTextView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="Admin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/AdminRollButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Edit Stats"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/AdminNameTextView" />

    <Button
        android:id="@+id/AdminLogoutButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/AdminRollButton"
        />

</androidx.constraintlayout.widget.ConstraintLayout>